<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory>

		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/railway</property>
		<property name="connection.username">root</property>
		<property name="connection.password">2023</property>

		<property name="show_sql">false</property>
		<property name="format_sql">false</property>
		<property name="hbm2ddl.auto">update</property>
		<mapping class="com.railway.management.entity.Admin"/>
		<mapping class="com.railway.management.entity.Destination"/>
		<mapping class="com.railway.management.entity.Employee"/>
		<mapping class="com.railway.management.entity.Person"/>
		<mapping class="com.railway.management.entity.Train"/>
		<mapping class="com.railway.management.entity.Ticket"/>
		<mapping class="com.railway.management.entity.User"/>
		
	</session-factory>

</hibernate-configuration>